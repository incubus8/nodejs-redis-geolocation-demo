{
  "name": "NodeJS-Redis-Geolocation-Demo",
  "version": "1.1.0",
  "engines": {
    "node": ">=6.9.0"
  },
  "description": "NodeJS Redis Geo Location Demo",
  "author": {
    "name": "Rheza Satria",
    "email": "rheza.satria.ta@gmail.com"
  },
  "main": "src/server.js",
  "scripts": {
    "prod": "NODE_ENV=production node src/server.js",
    "dev": "node src/server.js",
    "dev:debug": "node debug src/server.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "npm run lint && nyc ava --verbose",
    "test:with-watcher": "DEBUG=ava:watcher npm test -- --watch --verbose",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/config/initializer/*.js"
    ]
  },
  "ava": {
    "files": [
      "tests/unit/*.js",
      "tests/integration/**/*.js"
    ],
    "source": [
      "src/**/*.{js}"
    ],
    "require": [
      "babel-core/register"
    ],
    "watch": false,
    "babel": {
      "presets": [
        "es2015",
        "stage-2"
      ]
    }
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "license": "(MIT OR Apache-2.0)",
  "dependencies": {
    "axios": "^0.16.2",
    "chalk": "^2.1.0",
    "express": "^4.14.0",
    "ip": "^1.1.4",
    "morgan": "^1.7.0",
    "redis": "^2.6.3"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-eslint": "^7.1.1",
    "chokidar": "^1.6.1",
    "codecov": "^1.0.1",
    "dotenv": "^2.0.0",
    "nyc": "^9.0.1",
    "standard": "^8.5.0",
    "supertest": "^2.0.1",
    "supertest-as-promised": "^4.0.2"
  }
}
